	pages = {1929--1940},
	file = {Full Text PDF:/home/daluab/.mozilla/firefox/ceesjlsm.default/zotero/storage/U2753EHH/Konstantinidis Konstantinos T et al. - 2006 - The bacterial species definition in the genomic er.pdf:application/pdf;Snapshot:/home/daluab/.mozilla/firefox/ceesjlsm.default/zotero/storage/9PCQBF7X/rstb.2006.html:text/html}
}

@article{tindall_notes_2010,
